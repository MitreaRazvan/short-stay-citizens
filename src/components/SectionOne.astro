---
import { Image } from "astro:assets";
import listico from "../img/list/listico.png";
---

<!-- <Image src={listico} alt="a list of icons" /> -->
<div
  id="app"
  class="max-w-screen-xl mx-auto px-4 md:px-8 py-12 transition-all duration-500 ease-linear lg:py-40"
>
  <div class="px-4 mx-auto max-w-screen-xl text-center py-16">
    <h1
      class="mb-4 text-4xl font-medium tracking-tight leading-none text-Primary-Blue md:text-5xl lg:text-6xl"
    >
      Apartments Gallery<span class="text-Primary-Accent">.</span>
    </h1>
  </div>

  <div class="relative">
    <div
      class="slides-container h-[300px] lg:h-[550px] flex snap-x snap-mandatory overflow-hidden overflow-x-auto space-x-2 rounded scroll-smooth before:w-[45vw] before:shrink-0 after:w-[45vw] after:shrink-0 md:before:w-0 md:after:w-0"
    >
      <div
        class="slide aspect-square h-full flex-shrink-0 snap-center rounded overflow-hidden"
      >
        <img class="w-full h-full object-cover" src={listico.src} />
      </div>
      <div
        class="slide aspect-square h-full flex-shrink-0 snap-center rounded overflow-hidden"
      >
        <img
          class="w-full h-full object-cover"
          src="https://picsum.photos/1260/721"
        />
      </div>
      <div
        class="slide aspect-square h-full flex-shrink-0 snap-center rounded overflow-hidden"
      >
        <img
          class="w-full h-full object-cover"
          src="https://picsum.photos/1260/722"
        />
      </div>
      <div
        class="slide aspect-square h-full flex-shrink-0 snap-center rounded overflow-hidden"
      >
        <img
          class="w-full h-full object-cover"
          src="https://picsum.photos/1260/723"
        />
      </div>
      <div
        class="slide aspect-square h-full flex-shrink-0 snap-center rounded overflow-hidden"
      >
        <img
          class="w-full h-full object-cover"
          src="https://picsum.photos/1260/724"
        />
      </div>
      <div
        class="slide aspect-square h-full flex-shrink-0 snap-center rounded overflow-hidden"
      >
        <img
          class="w-full h-full object-cover"
          src="https://picsum.photos/1260/726"
        />
      </div>
      <div
        class="slide aspect-square h-full flex-shrink-0 snap-center rounded overflow-hidden"
      >
        <img
          class="w-full h-full object-cover"
          src="https://picsum.photos/1260/727"
        />
      </div>
      <div
        class="slide aspect-square h-full flex-shrink-0 snap-center rounded overflow-hidden"
      >
        <img
          class="w-full h-full object-cover"
          src="https://picsum.photos/1260/728"
        />
      </div>
      <div
        class="slide aspect-square h-full flex-shrink-0 snap-center rounded overflow-hidden"
      >
        <img
          class="w-full h-full object-cover"
          src="https://picsum.photos/1260/729"
        />
      </div>
      <div
        class="slide aspect-square h-full flex-shrink-0 snap-center rounded overflow-hidden"
      >
        <img
          class="w-full h-full object-cover"
          src="https://picsum.photos/1260/730"
        />
      </div>
    </div>

    <div class="absolute top-0 -left-16 h-full items-center hidden md:flex">
      <button
        role="button"
        class="prev px-2 py-2 rounded-full bg-neutral-100 text-neutral-900 group"
        aria-label="prev"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-8 h-8 group-active:-translate-x-2 transition-all duration-200 ease-linear"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15.75 19.5L8.25 12l7.5-7.5"></path>
        </svg>
      </button>
    </div>
    <div class="absolute top-0 -right-16 h-full items-center hidden md:flex">
      <button
        role="button"
        class="next px-2 py-2 rounded-full bg-neutral-100 text-neutral-900 group"
        aria-label="next"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-8 h-8 group-active:translate-x-2 transition-all duration-200 ease-linear"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
        </svg>
      </button>
    </div>
  </div>
</div>

